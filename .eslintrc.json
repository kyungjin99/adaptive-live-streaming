{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "no-bitwise": ["error", { "allow": ["~", "|", ">>", "<<", "&"] }],
        "no-shadow": ["off"],
        "linebreak-style": 0
    }
}